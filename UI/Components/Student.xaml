<UserControl x:Class="UI.Components.Student"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI.Components"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <GroupBox Width="400" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="3" Padding="3">
                <ListBox BorderBrush="White">
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Name</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding FullName}"></TextBlock>
                    </StackPanel>
                </ListBox> 
            </GroupBox>
            <GroupBox Width="200" Height="230" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3" Padding="3">
                <ListBox BorderBrush="White">
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Faculty</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding Faculty}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Specialty</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding Speciality}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Status</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding Status}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Course</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding Course}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Potok</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding Potok}"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label HorizontalAlignment="Center" VerticalAlignment="Center">Group</Label>
                        <Canvas Width="10"></Canvas>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="80" Text="{Binding Group}"></TextBlock>
                    </StackPanel>
                </ListBox> 
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
